{%- doc -%}
  Renders a pin button.

  @param {string} [tag] - The tag to use
  @param {string} [attributes] - Additional attributes to add to the tag
{%- enddoc -%}

{%- assign tag = tag | default: 'a' -%}
<{{ tag }}
  class="pin-button header-actions__action"
  aria-label="{{ 'accessibility.pin' | t }}"
  href="/pages/dealer-locator"
  {{ attributes }}
>
  <span
    class="pin-button__icon"
    aria-hidden="true"
  >
    {{- 'icon-pin.svg' | inline_asset_content -}}
  </span>
</{{ tag }}>

{% stylesheet %}
  .pin-button {
    color: var(--color-foreground);
    appearance: none;
    border: none;
    background: none;
    height: var(--button-size);
    width: var(--button-size);
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-content: center;
    transition: color var(--animation-speed) var(--animation-easing);
  }

  .pin-button__icon {
    color: currentColor;
    display: inline-flex;
    justify-content: center;
    align-items: center;
  }
  @media screen and (max-width: 750px) {
    .pin-button {
      display: none;
    }
  }
{% endstylesheet %}